  "files": [
    "dist/"
  ],
  "exports": {
    "./package.json": "./package.json",
    "./react": {
      "types": "./dist/react.d.ts",
      "default": "./dist/react.js"
    },
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
